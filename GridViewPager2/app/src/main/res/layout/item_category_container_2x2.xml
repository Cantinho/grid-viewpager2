<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item01"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorA"
        android:gravity="center_horizontal|center_vertical"
        android:text="A"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/item03"
        app:layout_constraintEnd_toStartOf="@+id/item02"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorB"
        android:gravity="center_horizontal|center_vertical"
        android:text="B"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/item04"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item01"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item03"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorC"
        android:gravity="center_horizontal|center_vertical"
        android:text="C"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item04"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item01" />

    <TextView
        android:id="@+id/item04"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorD"
        android:gravity="center_horizontal|center_vertical"
        android:text="D"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item03"
        app:layout_constraintTop_toBottomOf="@+id/item02" />
</androidx.constraintlayout.widget.ConstraintLayout>